<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <script src="../public/js/login.js"></script>
<body class="body-login">
    <%- include("./partials/header.ejs") %>
    <main>   
        <div class="login">
            <% if (typeof errors != "undefined") { %>
                <p class="errores">ERROR</p>
                <ul>
                    <% for( let i = 0; i < errors.length; i++) {%>
                        <li>
                            <%= errors[i].msg %>
                        </li>
                    <% } %>
                </ul>
            <% } %>
            <form action="/login" method="POST" enctype="multipart/form-data>
                <h1 class="form-titulo">INICIO DE SESION</h1>
                <h1 class="form-titulo">DELY-HOUSE</h1>
                <div class="input">
                <label for="email"> Usuario:</label>
                <input type="email" name="email" id="email" placeholder="Ingresa tu email">
                <label for="passwordUsuario">Contraseña:</label>
                <input type="password" name="passwordUsuario" id="passwordUsuario" placeholder="Ingresa tu contraseña">
                <button class="button" type="submit">Ingresar</button>
                <button class="button" type="submit" id="forgot-password-btn">Olvide mi contraseña</button>
                <button class="button" type="submit">Registrarse</button>
            </form>
        </div>
    </main>
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>
</body>
</html>

